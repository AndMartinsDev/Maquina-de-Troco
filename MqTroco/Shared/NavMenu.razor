<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column list-group" style="margin-left:0.3rem">
        <div class="nav-item px-3 list-group-item list-group-item-action">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span><h4>Home</h4>
            </NavLink>
        </div>
        <div class="nav-item px-3 list-group-item list-group-item-action">
            <NavLink class="nav-link" href="caixa">
                <span class="oi oi-plus" aria-hidden="true"></span><h4>Caixa</h4>
            </NavLink>
        </div>
        <div class="nav-item px-3 list-group-item list-group-item-action">
            <NavLink class="nav-link" href="fetchdata" disabled>
                <span class="oi oi-list-rich" aria-hidden="true"></span><h4>Fetch data</h4>
            </NavLink>
        </div>
    </nav>
</div>
<div>
    <img src="imagens/ImgHomem.jpg" class="imgLogo" aria-hidden="true"/>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
